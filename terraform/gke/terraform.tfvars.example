# =============================================================================
# GKE Cluster Configuration
# =============================================================================
# Copy this to terraform.tfvars and customize as needed
# =============================================================================

project_id   = "data-cluster-gke1"
region       = "europe-central2"
zone         = "europe-central2-b"
cluster_name = "edge-analytics"
environment  = "production"

# Node Pool Configuration (Cost-Optimized)
machine_type   = "e2-medium" # 2 vCPU, 4GB RAM
min_node_count = 1           # Start with 1 node
max_node_count = 3           # Scale up to 3 nodes
disk_size_gb   = 50          # Minimal disk
use_spot_vms   = true        # 60-91% cheaper!

# Security
enable_private_nodes = false # Set to true for production
